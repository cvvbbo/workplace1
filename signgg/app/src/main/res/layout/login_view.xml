<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDEDEB"
    >



    <android.support.v7.widget.Toolbar
        android:id="@+id/tb"
        android:background="#3090E6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v7.widget.Toolbar>


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login"/>

    <TextView
        android:layout_marginLeft="21dp"
        android:layout_marginBottom="15dp"
        android:text="首次登陆的用户我们将自动为您创建新账户"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:padding="3dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:text="+86"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/phonenum"
            android:background="@null"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />

        <Button
            android:background="@drawable/select_sendmsg"
            android:id="@+id/send_code"
            android:layout_width="94dp"
            android:layout_height="39dp"
            android:text="获取验证码"
            android:textSize="13sp" />


    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:background="@color/linecolor"
        android:layout_height="1dp"/>

    <LinearLayout
        android:padding="3dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/signbt"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:text="验证码"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/signnum"
            android:background="@null"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:background="@color/linecolor"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/passwordload"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用密码登陆"/>



    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="登陆"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#4CC05F"
        />


</LinearLayout>
